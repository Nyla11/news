
.content {
	padding: 20rpx;
	background: #f5f6fa;
	min-height: 100vh;
}
.card {
	background: #fff;
	border-radius: 16rpx;
	box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
	margin-bottom: 26rpx;
	overflow: hidden;
}
.cover {
	width: 100%;
	height: 320rpx;
	object-fit: cover;
}
.info {
	padding: 24rpx;
}
.title {
	font-size: 32rpx;
	font-weight: 700;
	color: #333;
}
.time {
	font-size: 26rpx;
	color: #888;
	margin-top: 12rpx;
}
